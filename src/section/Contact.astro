---
import MapComponent from "../components/MapComponent.astro";

const mapProps = {
  latitude: 9.2765678, 
  longitude: -74.8280144, 
  zoom: 14,
  tileLayer: "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
  attribution: "&copy; OpenStreetMap contributors",
};

const whatsappNumber = "";
const whatsappMessage =
  "Hola, estoy interesado en más información sobre la cabaña.";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<section id="contacto" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-green-800">Contáctanos</h2>
    <p class="text-center text-gray-700 mt-2">
      Estamos aquí para ayudarte con tu reserva o cualquier consulta. ¡No dudes
      en escribirnos!
    </p>

    <div
      class="flex flex-col md:flex-row justify-center items-start gap-8 mt-8"
    >
      <!-- Formulario de contacto -->
      <form class="w-full md:w-1/2 bg-gray-100 p-6 rounded-lg shadow-md">
        <div class="mb-4">
          <label class="block text-gray-700 font-medium">Nombre</label>
          <input
            type="text"
            class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
            placeholder="Tu nombre"
          />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-medium"
            >Correo Electrónico</label
          >
          <input
            type="email"
            class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
            placeholder="tucorreo@email.com"
          />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-medium">Mensaje</label>
          <textarea
            class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-green-500"
            rows="4"
            placeholder="Escribe tu mensaje aquí"></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-green-600 text-white py-2 rounded-md font-semibold hover:bg-green-700 transition"
        >
          Enviar Mensaje
        </button>
      </form>

      <!-- Contacto por WhatsApp -->
      <div class="w-full md:w-1/2 flex flex-col items-center">
        <p class="text-lg text-gray-700 text-center mb-4">
          ¿Prefieres escribirnos directamente por WhatsApp? Haz clic en el botón
          y chatea con nosotros en segundos.
        </p>
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 bg-green-500 text-white text-lg font-semibold px-6 py-3 rounded-lg shadow-md hover:bg-green-600 transition"
        >
          <i class="bx bxl-whatsapp text-3xl"></i> Escribir al WhatsApp
        </a>
      </div>
    </div>

    <div class="flex flex-col items-center w-full mt-4">
      <div class="flex w-full items-center mb-11">
        <div class=" border-green-800 border-2 flex-grow border-t"></div>
        <div class="mx-4">
          <h2 class="text-center text-3xl font-bold  text-green-800">Encuéntranos en el Mejor Lugar para tu Descanso</h2>
        </div>
        <div class=" border-green-800 border-2 flex-grow border-t"></div>
      </div>
    
      <!-- Mapa de ubicación centrado -->
      <div class="w-full md:w-2/3 lg:w-1/2 h-80 rounded-lg overflow-hidden shadow-lg">
        <MapComponent {...mapProps} />
      </div>
    </div>
  </div>
</section>
